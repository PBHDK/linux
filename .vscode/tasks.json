{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure AARCH64 defconfig",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "config",
        "defconfig"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build fast",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "fast"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build precise",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "precise"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "tests"
      ],
      "problemMatcher": []
    },
    {
      "label": "Debug Object",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "debug",
        "${input:object}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Random Search",
      "type": "shell",
      "command": "./doitlk-random-search.py",
      "args": [
        "${input:runs}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "object",
      "description": "Relative path to the object we want to debug",
      "type": "promptString"
    },
    {
      "id": "runs",
      "description": "Number of runs for random search",
      "type": "promptString",
      "default": "1"
    }
  ]
}