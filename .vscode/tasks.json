  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure AARCH64 defconfig",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "config",
        "defconfig"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build fast",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "fast"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build precise",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "precise"
      ],
      "problemMatcher": []
    },
    {
      "label": "Module",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "module",
        "${input:module}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build tests",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "module",
        "DoitLk/dep_chain_tests.o"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "tests"
      ],
      "problemMatcher": []
    },
    {
      "label": "Debug",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "debug",
        "${input:module}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Debug tests",
      "type": "shell",
      "command": "./doitlk-linux-build.py",
      "args": [
        "debug",
        "DoitLk/dep_chain_tests.o"
      ],
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "id": "module",
      "description": "Relative path to the module we want to debug",
      "type": "promptString"
    }
  ]
}